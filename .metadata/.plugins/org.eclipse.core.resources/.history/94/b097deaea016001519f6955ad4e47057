package ba.bitcamp.homeworkInheritance.task03;

import ba.bitcamp.homeworkInheritance.task02.Author;

public class Book {

	/*
	 * Declaring properties of book.
	 */
	private String name;
	private double price;
	private int status;
	private Author author;

	/**
	 * Constructor
	 * 
	 * @param name
	 *            - Name of the book.
	 * @param price
	 *            - Price of the book.
	 * @param status
	 *            - Status in the book-shop.
	 * @param author
	 *            - Name of the author.
	 */
	public Book(String name, double price, int status, Author author) {
		super();
		this.name = name;
		this.price = price;
		this.status = status;
		this.author = author;
	}

	/**
	 * Prints information about the book
	 */
	public String toString() {
		String s = "";
		s += "Name: " + name + "\n";
		s += "Price: " + price + "\n";
		s += "Status: " + status + "\n";
		s += "Author: " + author.getName() + "\n";

		return s;
	}

	/*
	 * Get and set methods
	 */
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public double getPrice() {
		return price;
	}

	public void setPrice(double price) {
		this.price = price;
	}

	public int getStatus() {
		return status;
	}

	public void setStatus(int status) {
		this.status = status;
	}

}
