package ba.bitcamp.homeworkInheritance.task02;

public class Author {

	/*
	 * Declaring properties of author.
	 */
	private String name;
	private String mail;
	private boolean isMale;

	/**
	 * Constructor.
	 * 
	 * @param name
	 *            - Name of the author.
	 * @param mail
	 *            - Mail of the author.
	 * @param isMale
	 *            - Is the author male or female.
	 */
	public Author(String name, String mail, boolean isMale) {
		super();
		this.name = name;
		this.mail = mail;
		this.isMale = isMale;
	}

}
